<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.application.anaruhudson.streamz">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="my.application.anaruhudson.streamz.MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="my.application.anaruhudson.streamz.SportListActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="my.application.anaruhudson.streamz.SplashActivity"
            android:theme="@style/SplashTheme"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>